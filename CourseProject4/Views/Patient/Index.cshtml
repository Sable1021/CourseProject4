@model IEnumerable<CourseProject4.Models.Patient>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Patients</h1>

<p>

    <a asp-action="Create">Create New</a>

</p>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Insurance)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdmitDate)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.DischargeDate)

            </th>



        </tr>
    </thead>

    <tbody>

        @foreach (var pat in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => pat.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pat.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pat.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pat.Insurance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pat.Diagnosis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pat.Doctor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pat.AdmitDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pat.DischargeDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@pat.PatientID">Edit</a>
                    <a asp-action="Details" asp-route-id="@pat.PatientID">Details</a>
                    <a asp-action="Delete" asp-route-id="@pat.PatientID">Delete</a>
                </td>

            </tr>
        }
    </tbody>

</table>
